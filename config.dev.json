{
    "WEB_PORT": 3001,
    "MYSQL": {
        "host": "mysql_expressjs",
        "port": 3306,
        "database": "ts-express",
        "username": "root",
        "password": "123456",
        "dialect": "mysql",
        "pool": {
            "max": 2000,
            "min": 0,
            "idle": 10000
        },
        "define": {
            "timestamps": false,
            "freezeTableName": true,
            "charset": "utf8mb4"
        },
        "query": {
            "raw": true
        },
        "logging": true
    },
    "LOG": {
        "appenders": {
            "out": {
                "type": "console"
            },
            "allLog": {
                "type": "dateFile",
                "filename": "./logs/server",
                "pattern": "-yyyy-MM-dd.log",
                "alwaysIncludePattern": true
            },
            "sql": {
                "type": "dateFile", 
                "filename": "./logs/sql.log", 
                "maxLogSize": "1024 * 1024", 
                "keepFileExt": true, 
                "daysToKeep": 30,
                "layout": {
                    "type": "pattern",
                    "pattern": "%c [%d{yyyy-MM-dd hh:mm:ss}] [%p]: %m%n"
                }
            },
            "httpLog": {
                "type": "dateFile",
                "filename": "logs/httpAccess.log",
                "pattern": ".yyyy-MM-dd",
                "keepFileExt": true
            },
            "errorLog": {
                "type": "file",
                "filename": "./logs/error.log"
            },
            "error": {
                "type": "logLevelFilter",
                "level": "error",
                "appender": "errorLog"
            }
        },
        "categories": {
            "sql": {
                "appenders": ["sql"], 
                "level": "all"
            },
            "http": {
                "appenders": [
                    "out",
                    "httpLog"
                ],
                "level": "debug"
            },
            "default": {
                "appenders": [
                    "out",
                    "allLog",
                    "error"
                ],
                "level": "debug"
            }
        },
        "disableClustering": true
    }
}
