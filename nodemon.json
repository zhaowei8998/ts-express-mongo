{
  "restartable": "rs",
  "verbose": true,
  "watch": [
    "./src/**/*.ts",
    "./config.*.json"
  ],
  "ext": "ts json",
  "execMap": {
    "ts": "ts-node"
  },
  "exec": "ts-node ./src/server.ts",
  "ignore": [
    "./logs/**/*",
    "test/*",
    "docs/*",
    "*.test.js",
    "./node_modules",
    "./mysql"
  ]
}